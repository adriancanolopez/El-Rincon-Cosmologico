---
import type { News } from '../../types/news.types';
import formatDate from '../../utils/formatDate';

type Props = {
    news: News
}

const { news } = Astro.props;
const newsData = news;
---

<article class="flex flex-col bg-gray-300 text-black rounded-lg transition-transform hover:scale-102 duration-300 article-shadow">
    {
        newsData.imageUrl !== null && (
            <div>
                <img src={`http://localhost:3000/uploads/news/${newsData.imageUrl}`} alt={`Imagen de la noticia ${newsData.imageUrl}`} class="object-cover w-full h-48 rounded-t-lg"/>
            </div>
        )
    }
    <div class="flex flex-col gap-2 px-5 py-4">
        <h3 class="text-xl font-semibold text-gray-800 hover:text-blue-500 transition-colors">{newsData.title}</h3>
        <span class="text-sm text-gray-600 italic">{formatDate(newsData.createdAt as string)}</span>
        <p class="text-gray-700">{newsData.description.slice(0, 120) + "..."}</p>
        <button class="w-full lg:w-1/3 bg-blue-600 text-white rounded-md p-2 hover:bg-blue-700 hover:cursor-pointer transition-colors">Leer m√°s</button>
    </div>
</article>