---
import { Image } from "astro:assets";

type Props = {
    image: any,
    width?: number,
    className?: string
}

const { image, width, className } = Astro.props;

---

<figure class={`${className || ''}`}>
    <Image src={image.url} alt={image.description} width={width}/>
    <figcaption>
        {image.description} | <span class="font-bold">Cr√©ditos:</span> {image.credits}
    </figcaption>
</figure>