---
import type { CollectionEntry } from 'astro:content';

type Props = {
    mission: CollectionEntry<"missions">,
    link: string,
}

const { mission, link } = Astro.props;

const { title, objective } = mission.data;
---

<article class="w-full md:w-[45%] flex flex-col items-start gap-4 bg-gray-700 p-4 rounded-lg">
    <h3 class="text-2xl font-bold">{title}</h3>
    <p>{objective}</p>
    <a href={link} class="bg-blue-500 px-4 py-2 rounded-md transition-colors hover:bg-blue-700">
        <button class="hover:cursor-pointer">Ver misi√≥n</button>
    </a>
</article>